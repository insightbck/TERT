<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Body", :body %></th>
			<th><%= casein_sort_link "Post", :post_id %></th>
			<th><%= casein_sort_link "Summary", :summary %></th>
			<th><%= casein_sort_link "Permalink", :permalink %></th>
			<th><%= casein_sort_link "String", :string %></th>
			<th><%= casein_sort_link "Created", :created %></th>
			<th><%= casein_sort_link "Edited", :edited %></th>
			<th><%= casein_sort_link "Owner", :owner_id %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% content_posts.each do |content_post| %>
		<tr>
			<td><%= casein_table_cell_link content_post.title, casein_content_post_path(content_post) %></td>
			<td><%= casein_table_cell_link content_post.body, casein_content_post_path(content_post) %></td>
			<td><%= casein_table_cell_link content_post.post_id, casein_content_post_path(content_post) %></td>
			<td><%= casein_table_cell_link content_post.summary, casein_content_post_path(content_post) %></td>
			<td><%= casein_table_cell_link content_post.permalink, casein_content_post_path(content_post) %></td>
			<td><%= casein_table_cell_link content_post.string, casein_content_post_path(content_post) %></td>
			<td><%= casein_table_cell_link content_post.created, casein_content_post_path(content_post) %></td>
			<td><%= casein_table_cell_link content_post.edited, casein_content_post_path(content_post) %></td>
			<td><%= casein_table_cell_link content_post.owner_id, casein_content_post_path(content_post) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_content_post_path(content_post), :method => :delete, :data => { :confirm => "Are you sure you want to delete this content post?" }) %>
			</td>
		</tr>
	<% end %>
</table>